{
  "manifest_version": 2,   
  "background": {
      "page": "background.html"
   },

  "name": "Wykop Simple Notifier",
  "description": "Dodatek, który pozwolić być Ci na bieżąco z powiadomieniami na wykopie. Nie musisz się nigdzie rejestrować ani kombinować z API.",
  "version": "1.1.3",

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  
  "browser_action": {
    "default_icon": "img/icon16.png"
  },

  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },

  "options_page": "options.html",

  "permissions": [ "https://www.wykop.pl/", "webRequest", "storage", "notifications"]

}